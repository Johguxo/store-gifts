---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import WhatsApp from '../icons/WhatsApp.astro';
import CardImage from '../layouts/CardImage.astro';
---

<Layout title="Detalles Magicos">
	<main class="mx-10">
		<div class="bg-[#7879F1] rounded-md p-7 my-4">
			<div class="flex gap-x-3">
				<div>
					<h1 class="text-black text-5xl font-extrabold">Encuentra los <span class="text-[#ef91fc]">mejores regalos</span> a los mejores precios</h1>
					<div class="my-10 flex gap-x-2">
						<div class="flex-column mr-4">
							<p class="text-xl font-semibold">30+</p>
							<p>modelos</p>
						</div>
						<div class="border-l-black border-l-2 flex-column px-5">
							<p class="text-xl font-semibold">20+</p>
							<p>ofertas</p>
						</div>
					</div>
					<a class="rounded-lg bg-white p-3 gap-x-2 flex flex-row" href="https://google.com" target="_blank">
						<div class="bg-[#9dfce4] rounded-lg p-1"><WhatsApp class="size-6"/></div>
						<p class="text-gray-400">Que es lo que buscas?</p>
					</a>
				</div>
				<div>
					<img class="size-60" src="/src/assets/gift-3.png">
				</div>
			</div>
			
		</div>
		<div class="flex flex-row my-4">
			<div class="flex flex-col w-[15%]">
				<h1 class="font-bold text-2xl">Mas vendidos</h1>
				<p class="text-gray">Estos son los regalos mas pedidos por los clientes</p>
				<button class="bg-[#9dfce4] rounded-lg p-2 mr-20 my-3">
					Ver mas
				</button>
			</div>
			<div class="flex flex-row gap-5">
				<CardImage image="/src/assets/gift-3.png" name="Corazon encantado" price={40} priceDiscount={30}/>
				<CardImage image="/src/assets/gift-3.png" name="Corazon encantado" price={40} priceDiscount={30}/>
				<CardImage image="/src/assets/gift-3.png" name="Corazon encantado" price={40} priceDiscount={30}/>
				<CardImage image="/src/assets/gift-3.png" name="Corazon encantado" price={40} priceDiscount={30}/>
			</div>
		</div>
		<div class="flex flex-col my-10">
			<div class="text-center">
				<h1 class="font-bold text-2xl">Acerca de nosotros</h1>
				<p>Compra ahora y paga despues</p>
			</div>
		</div>
	</main>
</Layout>

